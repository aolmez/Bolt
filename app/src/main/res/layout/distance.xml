<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="runViewModel"
            type="com.chiragaggarwal.bolt.run.RunViewModel" />

    </data>

    <LinearLayout
        android:contentDescription="@string/distance"
        style="@style/layout_stats_element">

        <TextView
            style="@style/text_stats_measure"
            android:text="@{runViewModel.distance}" />

        <TextView
            style="@style/text_stats_label"
            android:text="@string/label_distance" />

    </LinearLayout>

</layout>
