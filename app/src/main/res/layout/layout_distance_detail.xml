<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_section_detail">

    <ImageView
        android:id="@+id/image_detail_distance"
        style="@style/image_section_detail"
        android:src="@drawable/road_with_two_placeholders" />

    <LinearLayout
        style="@style/layout_detail_info_detail_section">

        <TextView
            android:id="@+id/text_label_distance"
            style="@style/text_detail_label"
            android:text="@string/label_distance_detail" />

        <TextView
            android:id="@+id/text_detail_distance"
            style="@style/text_detail"
            tools:text="1.23 km" />

    </LinearLayout>

</RelativeLayout>
