<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_list_item_history">


    <ImageView
        android:id="@+id/image_run"
        style="@style/run_image_in_list"
        android:src="@drawable/runner_speeding" />

    <TextView
        android:id="@+id/text_distance_travelled"
        style="@style/text_distance_travelled"
        android:layout_toEndOf="@id/image_run"
        android:layout_toRightOf="@id/image_run"
        tools:text="0.00 km" />


    <TextView
        android:id="@+id/text_elapsed_time"
        style="@style/text_elapsed_time"
        android:layout_toRightOf="@id/image_run"
        tools:text="00:00:02" />

    <TextView
        android:id="@+id/text_date"
        style="@style/text_date"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:text="Sun, 13/11/2016" />

</RelativeLayout>
